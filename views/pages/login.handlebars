<section>
    <h1 class="index-header">{{title}}</h1>
    <div class= "container">
        <div class="row justify-content-center">
            <form class="needs-validation" action="/login" method="POST" id='login-form' novalidate>
                <div class="form-row justify-content-center">
                    <div class="col-md-8 mb-3">
                        <label for="usernameText">Username</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupPrepend">@</span>
                            </div>
                            <input type="text" class="form-control" id="usernameText" name="username" placeholder="Username"
                                aria-describedby="inputGroupPrepend" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a Username.
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8 mb-3">
                        <label for="passwordText">Password</label>
                        <input type="password" class="form-control" id="passwordText" name="password" placeholder="Password"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a Password.
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="login-user">
                        <ul class="nav">
                            <li class="nav-item">
                                <a class="nav-link active" href="./signup">Don't have an account?</a>
                            </li>
                        </ul>
                        <div class= "error-msg">{{error}}</div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <button class="btn btn-primary" type="submit">Login!</button>
                </div>
            </form>
        </div>
    </div>
    <script src="/public/js/login-validation.js"></script>
</section>